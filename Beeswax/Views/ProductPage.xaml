<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beeswax.Views.ProductPage"
             xmlns:model="clr-namespace:Beeswax.Models"
             Title="ProductPage">

    <ContentPage.Content>
        <CollectionView x:Name="ProductCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Producto">
                    <Grid Padding="10" ColumnDefinitions="Auto, *">
                        <Image Source="{Binding imagen}" WidthRequest="100" HeightRequest="100"/>
                        <Label Text="{Binding nombreProducto}" FontSize="20" VerticalOptions="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>