<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Beeswax.Views.InicioShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Beeswax.Views"
    Title="Inicio">
    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent
                Title=""
                ContentTemplate="{DataTemplate local:InicioPage}"
                Route="InicioPage" />
        </Tab>
        <Tab Title="Compra" Icon="cart.png">
            <ShellContent
                Title=""
                ContentTemplate="{DataTemplate local:ShoppPage}"
                Route="ShoppPage" />
        </Tab>
        <Tab Title="Carrito" Icon="carrito.png">
            <ShellContent
                Title=""
                ContentTemplate="{DataTemplate local:CompraPage}"
                Route="CompraPage" />
        </Tab>

        <Tab Title="Gestion" Icon="edit.png">
            <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:ManageProductPage}"
        Route="ManageProductPage" />

        </Tab>


    </TabBar>
</Shell>
