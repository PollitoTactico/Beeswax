<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Beeswax.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Define los colores -->
            <Color x:Key="PrimaryColor">#f1a544</Color>
            <Color x:Key="TextColor">#f1a544</Color>
            <Color x:Key="UnselectedTextColor">#808080</Color>

            <!-- Define el estilo para el Shell -->
            <Style TargetType="Shell">
                <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource TextColor}" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource UnselectedTextColor}" />
                <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource TextColor}" />
            </Style>

            <!-- Define el estilo para las Tabs -->
            <Style TargetType="Tab">
                <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource TextColor}" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource UnselectedTextColor}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
